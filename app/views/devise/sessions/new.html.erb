
<div class="row">
  <div class="col-lg-8 d-none d-lg-block d-xl-block">   
    <div id="carousel" class="carousel slide vertical-center" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag("social1.jpg", class: "d-block w-100", html: { alt: "First slide" }) %>
        </div>
        <div class="carousel-item">
          <%= image_tag("social2.jpg", class: "d-block w-100", html: { alt: "Second slide" }) %>
        </div>
        <div class="carousel-item">
          <%= image_tag("social3.jpg", class: "d-block w-100", html: { alt: "Third slide" }) %>         
        </div>
      </div>
      <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="vertical-center">
      <div class="signInBox card">
        <div class="card-header">
          Inicio de Sesi칩n
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <h4><%= f.label "Correo" %></h4>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            <br>
            <div class="field">
              <h4><%= f.label "Contrase침a" %></h4>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>
            <br>
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label "Recordar Usuario", class: "checkbox inline" %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Iniciar Sesi칩n", class: "btn btn-lg btn-sign btn-block" %>
            </div>
          <% end %>
        </div>
        
        <div class="card-footer text-muted">
          <%= link_to "Olvidaste tu contrase침a?", new_password_path(resource_name) %>
        </div>
        
      </div>
    </div>

  </div>
</div>
<script>
  $('.carousel').carousel();
</script>

