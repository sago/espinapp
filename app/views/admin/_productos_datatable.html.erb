<div class="container" style="background-color: #fff;">
  <div class="row mt-4">
    <div class="col-lg-12"><h4>Productos</h4></div>
  </div>
  <table id="products" class="table table-striped table-bordered" style="width:100%">
    <thead>
      <tr>
        <th>Fecha de Venta</th>
        <th>Producto</th>
        <th>Negocio</th>        
        <th>Cantidad</th>        
      </tr>
    <thead>
    <tbody>
      <% @resource.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime("%d/%m/%Y") %></td>
          <td><%= get_product_name(order.product_id) %></td>
          <td><%= get_product_type(order.product_id) %></td>          
          <td><%= order.quantity %></td>          
        </tr>
      <% end %>
    <tbody>
    <tfooter><tfooter>
  </table>
</div>
<script>
$(document).ready( function () {
    $('#products').DataTable({
        dom: 'Blfrtlip',
        buttons: [
            'copy', 'excel', 'print'
        ],
        "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]
    });
} );
</script>