<div class="container" style="background-color: #fff;">
  <div class="row mt-4">
    <div class="col-lg-12 display"><h4>Pedidos</h4></div>
  </div>
  <table id="orders" class="table table-striped table-bordered" style="width:100%">
    <thead>
      <tr>        
        <th>Fecha</th>
        <th>Producto</th>        
        <th>Cantidad</th>
        <th>Cliente</th>
        <th>Abono / Saldo</th>
        <th>Repartidor</th>
      </tr>
    <thead>
    <tbody>
      <% @resource.each do |order| %>
        <tr>          
          <td><%= order.created_at.strftime("%d/%m/%Y") %></td>
          <td><%= get_product_name(order.product_id) %></td>
          <td><%= order.quantity %></td>
          <td><%= order.client.full_name %></td>
          <td><%= order.payment %>/<%= order.total - order.payment %></td>          
          <td><%= order.user.full_name %></td>
        </tr>
      <% end %>
    <tbody>
    <tfooter><tfooter>
  </table>
</div>
<script>
$(document).ready( function () {
    $('#orders').DataTable({
        dom: 'Blfrtlip',
        buttons: [
            'copy', 'excel', 'print'
        ],
        "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]
    });
} );
</script>