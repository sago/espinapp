<div class="container" style="background-color: #fff;">
  <div class="row mt-4">
    <div class="col-lg-12"><h4>Clientes</h4></div>
  </div>
  <table id="clients" class="table table-striped table-bordered" style="width:100%">
    <thead>
      <tr>        
        <th>Cliente</th>
        <th>Negocio</th>        
        <th>Tel√©fono</th>
        <th>Pedido</th>
        <th>Abono / Saldo</th>
        <th>Fecha</th>
      </tr>
    <thead>
    <tbody>
      <% @resource.each do |order| %>
        <tr>          
          <td><%= order.client.full_name %></td>
          <td><%= order.client.business %></td>          
          <td><%= order.client.phone %></td>
          <td><%= get_product_name(order.product_id) %>/<%= order.quantity %></td>
          <td><%= order.payment %>/<%= order.total - order.payment %></td>
          <td><%= order.created_at.strftime("%d/%m/%Y") %></td>
        </tr>
      <% end %>
    <tbody>
    <tfooter><tfooter>
  </table>
</div>
<script>
$(document).ready( function () {
    $('#clients').DataTable({
        dom: 'lBfrtip',
        buttons: [
            'copy', 'excel', 'print'
        ],
        "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]
    });
} );
</script>