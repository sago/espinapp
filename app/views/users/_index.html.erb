<br>
<div class="container">
  <p id="notice"><%= notice %></p>
  <h4>Lista de Usuarios</h4>
  <br>
  <table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Rol:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= UserDecorator.new(user).fullname %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Show', user_path(user), class: "btn btn-sm btn-success" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-sm btn-warning" %></td>
        <td><%= link_to 'Destroy', user_path(user),
                method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Agregar Usuario', new_user_path, class: "btn btn-sm btn-info" %>
