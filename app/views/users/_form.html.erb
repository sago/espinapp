<%= form_with(model: @user, local: true) do |f| %>
  <div class="field">
    <%= f.label "Nombre" %><br />
    <%= f.text_field :full_name, autofocus: true, class: "form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label "Rol:" %><br />
    <%= f.select :role, ["admin", "repartidor"], { include_blank: "Select..." }, { class: "form-control" } %>
  </div>
  <br
  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
