<%= form_with(url: create_users_path, local: true) do |f| %>
  <div class="field">
    <%= f.label "Nombre" %><br />
    <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label "Apellido" %><br />
    <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
  </div>
  <br>
  <% if @user.id.nil? %>
    <div class="field">
      <%= f.label "Correo" %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
    <br>
    <div class="field">
      <%= f.label "Contraseña" %><br />
      <%= f.password_field :password, class: "form-control", placeholder: "Mínimo 6 caracteres" %>
    </div>
  <% end %>
  <br>
  <div class="field">
    <%= f.label "Rol:" %><br />
    <%= f.select :role, ["admin", "repartidor"], { include_blank: "Select..." }, { class: "form-control" } %>
  </div>
  <br
  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
