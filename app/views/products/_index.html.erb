<p id="notice"><%= notice %></p>

<h4>Productos</h4>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio por unidad</th>
      <th>Tipo(Negocio)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if @products.present? %>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price_unit %></td>
        <td><%= product.product_type %></td>
        <td><%= link_to 'Mostrar', product, class: "btn btn-sm btn-success" %></td>
        <td><%= link_to 'Editar', edit_product_path(product), class: "btn btn-sm btn-warning" %></td>
        <td><%= link_to 'Borrar', product, method: :delete, data: { confirm: 'EstÃ¡ seguro de borrarlo?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>

