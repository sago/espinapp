<p id="notice"><%= notice %></p>

<h4>Clientes</h4>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Negocio</th>
      <th>Domicilio</th>
      <th>Teléfono</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if @clients.present? %>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.full_name %></td>
        <td><%= client.business %></td>
        <td><%= client.address %></td>
        <td><%= client.phone %></td>
        <td><%= client.email %></td>
        <td><%= link_to 'Mostrar', client, class: "btn btn-sm btn-success" %></td>
        <td><%= link_to 'Editar', edit_client_path(client), class: "btn btn-sm btn-warning" %></td>
        <td><%= link_to 'Borrar', client, method: :delete, data: { confirm: 'Está seguro de borrarlo?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar Cliente', new_client_path, class: "btn btn-sm btn-info" %>
<div></div>

